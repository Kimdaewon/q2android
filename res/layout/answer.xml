<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#DDDDDD" />
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
    	<ImageView
		    android:id="@+id/avatar"
			android:layout_width="@dimen/aavatar_size"
			android:layout_height="@dimen/aavatar_size"
		    />
		<TextView
	        android:id="@+id/meta"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content" 
			android:textSize="@dimen/meta_size"
			android:textStyle="bold"
			android:textColor="#000000"
			android:layout_marginLeft="10dp"
			android:layout_gravity="center_vertical"
	        />
	</LinearLayout>
	<ImageView
		android:layout_height="1dp" 
		android:layout_width="match_parent"
		android:background="#EEEEEE"
		/>
	
      <HorizontalScrollView 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:scrollbars="none"
          >
		<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
			<Button 
			    android:text="@string/edit" 
			    android:id="@+id/edit"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textSize="16sp" 
				android:textColor="#666666"
				android:background="#FFFFFF"
				android:padding="6dp"
				/>
			<ImageView
				android:layout_height="match_parent" 
				android:layout_width="1dp"
				android:layout_marginTop="4dp"
				android:layout_marginBottom="4dp"
				android:background="#EEEEEE"
				/>
			<Button 
			    android:text="@string/flag" 
			    android:id="@+id/flag"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textSize="16sp" 
				android:textColor="#666666"
				android:background="#FFFFFF"
				android:padding="6dp"
				/>
			<ImageView
				android:layout_height="match_parent" 
				android:layout_width="1dp"
				android:layout_marginTop="4dp"
				android:layout_marginBottom="4dp"
				android:background="#EEEEEE"
				/>
			<Button 
			    android:text="@string/hide" 
			    android:id="@+id/hide"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textSize="16sp" 
				android:textColor="#666666"
				android:background="#FFFFFF"
				android:padding="6dp"
				/>
			<ImageView
				android:layout_height="match_parent" 
				android:layout_width="1dp"
				android:layout_marginTop="4dp"
				android:layout_marginBottom="4dp"
				android:background="#EEEEEE"
				/>
			<Button 
			    android:text="@string/ask_related" 
			    android:id="@+id/ask_related"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textSize="16sp" 
				android:textColor="#666666"
				android:background="#FFFFFF"
				android:padding="6dp"
				/>
			<ImageView
				android:layout_height="match_parent" 
				android:layout_width="1dp"
				android:layout_marginTop="4dp"
				android:layout_marginBottom="4dp"
				android:background="#EEEEEE"
				/>
			<Button 
			    android:text="@string/comment" 
			    android:id="@+id/comment"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textSize="16sp" 
				android:textColor="#666666"
				android:background="#FFFFFF"
				android:padding="6dp"
				/>
		</LinearLayout>
	</HorizontalScrollView>	
	<ImageView
		android:layout_height="1dp" 
		android:layout_width="match_parent"
		android:background="#EEEEEE"
		/>		
	<LinearLayout 
		android:orientation="horizontal"
		android:layout_height="wrap_content"
        android:layout_width="match_parent"
		android:layout_marginLeft="10dp"
	    >
	    <LinearLayout
			android:id="@+id/vote_buttons"
			android:orientation="horizontal"
			android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
			android:layout_marginRight="8dp"
            android:layout_gravity="center_vertical"
	        >
	        <Button 
				android:id="@+id/vote_up_button"
				android:background="@drawable/voteup"
				android:layout_height="30dp"
		        android:layout_width="30dp"
	            />
	        <ImageView
	            android:id="@+id/button_spacer"
				android:layout_height="match_parent"
		        android:layout_width="12dp"
		        android:visibility="gone"
	            />
	        <Button 
				android:id="@+id/vote_down_button"
				android:background="@drawable/votedown"
				android:layout_height="30dp"
		        android:layout_width="30dp"
	            />
		</LinearLayout>
  			<LinearLayout 
			android:id="@+id/vote_container"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:orientation="vertical"
		    android:gravity="center"
		    >
			<TextView
			    android:id="@+id/netvotes"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:gravity="center"
				android:textStyle="bold"
				android:textSize="@dimen/box_font"
				/> 
			<TextView
			    android:id="@+id/vote_label"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:gravity="center"
				android:textStyle="bold"
				android:text="@string/votes"
				android:textSize="@dimen/box_label"
				/> 			    		    
		</LinearLayout>
		<View 
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="match_parent"
		    />		
		<ImageButton 
		    android:id="@+id/selector"
		    android:src="@drawable/selector"
			android:layout_width="36dp"
			android:layout_height="36dp"
			android:layout_gravity="center_vertical"
			android:background="@null"
			android:layout_margin="10dp"
		    />
	</LinearLayout>
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="@dimen/content_size" />
	<LinearLayout
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:orientation="vertical" 
	    />
</LinearLayout>