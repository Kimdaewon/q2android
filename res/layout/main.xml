<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
 	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:baselineAligned="false"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#DDDDDD"
	>
    <ListView android:id="@+id/android:list"
	    android:layout_width="300dp"
		android:layout_height="match_parent"
		android:clipToPadding="false"
		android:fadingEdge="none"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:dividerHeight="10dp"
        android:divider="@drawable/divider"
        android:headerDividersEnabled="false"
        android:cacheColorHint="#00000000"
        android:clickable="true"
       	/>
    <ScrollView 
		android:id="@+id/q_pane"
		android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
		android:background="#ffffff"
	    >
 		<LinearLayout
			android:id="@+id/q_pad"
			android:layout_height="wrap_content"
	        android:layout_width="match_parent"
			android:background="#ffffff"
			android:orientation="vertical"
			android:visibility="gone"
		    >
		    <LinearLayout 
				android:orientation="horizontal"
				android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
			    >
		    	<ImageView
				    android:id="@+id/qavatar"
					android:layout_width="@dimen/qavatar_size"
					android:layout_height="96dp"
					android:contentDescription="@string/avatar"
				    />
		    	<LinearLayout
					android:orientation="vertical"
					android:layout_height="match_parent"
			        android:layout_width="wrap_content"
			        android:layout_marginLeft="8dp"
			        >
					<TextView android:id="@+id/qtitle" 
						android:layout_width="match_parent"
						android:layout_height="wrap_content" 
						android:textSize="@dimen/title_size"
						android:textStyle="bold"
						android:textColor="#000000"
						/>
					<TextView
				        android:id="@+id/qmeta"
						android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_weight="1" 
						android:textSize="@dimen/meta_size"
						android:textStyle="bold"
						android:textColor="#000000"
						android:gravity="bottom"
				        />
				</LinearLayout>
			</LinearLayout>
			<ImageView
				android:layout_height="1dp" 
				android:layout_width="match_parent"
				android:background="#EEEEEE"
				/>
    			
	        <HorizontalScrollView 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:scrollbars="none"
	            >
	            <LinearLayout
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                >
	    			<Button 
					    android:text="@string/edit" 
					    android:id="@+id/qedit"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:textSize="16sp" 
						android:textColor="#666666"
						android:background="#FFFFFF"
						android:padding="6dp"
						/>
					<ImageView
						android:layout_height="match_parent" 
						android:layout_width="1dp"
						android:layout_marginTop="4dp"
						android:layout_marginBottom="4dp"
						android:background="#EEEEEE"
						/>
					<Button 
					    android:text="@string/flag" 
					    android:id="@+id/qflag"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:textSize="16sp" 
						android:textColor="#666666"
						android:background="#FFFFFF"
						android:padding="6dp"
						/>
					<ImageView
						android:layout_height="match_parent" 
						android:layout_width="1dp"
						android:layout_marginTop="4dp"
						android:layout_marginBottom="4dp"
						android:background="#EEEEEE"
						/>
					<Button 
					    android:text="@string/close" 
					    android:id="@+id/qclose"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:textSize="16sp" 
						android:textColor="#666666"
						android:background="#FFFFFF"
						android:padding="6dp"
						/>
					<ImageView
						android:layout_height="match_parent" 
						android:layout_width="1dp"
						android:layout_marginTop="4dp"
						android:layout_marginBottom="4dp"
						android:background="#EEEEEE"
						/>
					<Button 
					    android:text="@string/hide" 
					    android:id="@+id/qhide"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:textSize="16sp" 
						android:textColor="#666666"
						android:background="#FFFFFF"
						android:padding="6dp"
						/>
					<ImageView
						android:layout_height="match_parent" 
						android:layout_width="1dp"
						android:layout_marginTop="4dp"
						android:layout_marginBottom="4dp"
						android:background="#EEEEEE"
						/>
					<Button 
					    android:text="@string/answer" 
					    android:id="@+id/qanswer"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:textSize="16sp" 
						android:textColor="#666666"
						android:background="#FFFFFF"
						android:padding="6dp"
						/>
					<ImageView
						android:layout_height="match_parent" 
						android:layout_width="1dp"
						android:layout_marginTop="4dp"
						android:layout_marginBottom="4dp"
						android:background="#EEEEEE"
						/>
					<Button 
					    android:text="@string/comment" 
					    android:id="@+id/qcomment"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:textSize="16sp" 
						android:textColor="#666666"
						android:background="#FFFFFF"
						android:padding="6dp"
						/>						
				</LinearLayout>
			</HorizontalScrollView>					
			<ImageView
				android:layout_height="1dp" 
				android:layout_width="match_parent"
				android:background="#EEEEEE"
				/>						
			<LinearLayout 
				android:orientation="horizontal"
				android:layout_height="wrap_content"
		        android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
			    android:layout_marginTop="10dp"
			    >
			    <LinearLayout
					android:id="@+id/qvote_buttons"
					android:orientation="horizontal"
					android:layout_height="wrap_content"
			        android:layout_width="wrap_content"
					android:layout_marginRight="8dp"
					android:layout_gravity="center_vertical"
			        >
			        <Button 
						android:id="@+id/qvote_up_button"
						android:background="@drawable/voteup"
						android:layout_height="30dp"
				        android:layout_width="30dp"
			            />
			        <ImageView
			            android:id="@+id/qbutton_spacer"
						android:layout_height="match_parent"
				        android:layout_width="12dp"
				        android:visibility="gone"
			            />
			        <Button 
						android:id="@+id/qvote_down_button"
						android:background="@drawable/votedown"
						android:layout_height="30dp"
				        android:layout_width="30dp"
			            />
				</LinearLayout>
    			<LinearLayout 
					android:id="@+id/vote_container"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
				    android:gravity="center"
					android:layout_gravity="center_vertical"
				    >
					<TextView
					    android:id="@+id/qnetvotes"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:gravity="center"
						android:textStyle="bold"
						android:textSize="@dimen/box_font"
						/> 
					<TextView
					    android:id="@+id/qvote_label"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:gravity="center"
						android:textStyle="bold"
						android:text="@string/votes"
						android:textSize="@dimen/box_label"
						/> 			    		    
				</LinearLayout>
				<View 
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
				    />
				<ImageButton 
				    android:src="@drawable/starrer"
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:layout_gravity="center_vertical"
					android:background="@null"
					android:layout_margin="10dp"
				    />				
			</LinearLayout>
	
			<TextView
		        android:id="@+id/qcontent"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" 
				android:textSize="@dimen/content_size"
				android:textColor="#000000"
				android:padding="10dp"
		        />
			<LinearLayout
		        android:id="@+id/qcomments"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
				android:orientation="vertical" 
			    />
			<LinearLayout
		        android:id="@+id/acontainer"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical" 
			    >
			</LinearLayout>		
	    </LinearLayout>
	</ScrollView>
</LinearLayout>
